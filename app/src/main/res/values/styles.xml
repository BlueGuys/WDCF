<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/appColor</item>
    </style>

    <style name="editText_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ds100</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawableBottom">@drawable/bg_selector_edit_bottom</item>
        <item name="android:textColorHint">@color/darkgray</item>
        <item name="android:textColor">@color/appColor</item>
        <item name="android:textCursorDrawable">@drawable/bg_selector_edit_cursor</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="button_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ds80</item>
        <item name="android:background">@drawable/bg_selector_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="item_a">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/ds4</item>
        <item name="android:layout_marginLeft">@dimen/ds10</item>
        <item name="android:layout_marginRight">@dimen/ds10</item>
    </style>

</resources>
