<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ds100"
    android:background="@color/appColorPositive"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ds50"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_01"
            android:layout_width="@dimen/ds150"
            android:layout_height="match_parent"
            android:background="@drawable/bg_left_white_stroke"
            android:gravity="center"
            android:text="产品"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView_02"
            android:layout_width="@dimen/ds150"
            android:layout_height="match_parent"
            android:background="@drawable/bg_white_stroke"
            android:gravity="center"
            android:text="活动"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView_03"
            android:layout_width="@dimen/ds150"
            android:layout_height="match_parent"
            android:background="@drawable/bg_right_white_stroke"
            android:gravity="center"
            android:text="头条"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>

