<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/ds2"
    android:background="@color/appBackground"
    android:paddingLeft="@dimen/ds10"
    android:paddingRight="@dimen/ds10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_white"
        android:orientation="vertical"
        android:padding="@dimen/ds20">

        <TextView
            android:id="@+id/tv_order_label"
            android:layout_width="@dimen/ds150"
            android:layout_height="@dimen/ds100"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ds20"
            android:background="@color/appColorPositive"
            android:gravity="center"
            android:text="私募"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds40"
            android:src="@drawable/icon_arrow_right" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_order_label"
            android:gravity="center_vertical|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/ds10"
                android:layout_toRightOf="@id/tv_order_name"
                android:textColor="@color/fontPositive"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_order_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/ds10"
                android:layout_toRightOf="@id/tv_order_name"
                android:textColor="@color/fontPositive"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_arrow"
            android:gravity="center_vertical|right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/ds10"
                android:layout_toRightOf="@id/tv_order_name"
                android:textColor="@color/fontNegative"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/ds10"
                android:layout_toRightOf="@id/tv_order_name"
                android:textColor="@color/greenyellow"
                android:textSize="13dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
