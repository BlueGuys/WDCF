<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ds480">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.hongyan.wdcf.widget.ScrollBannerView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds400" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds40"
            android:background="@color/appBackground" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/ds15"
        android:layout_marginLeft="@dimen/ds15"
        android:layout_marginRight="@dimen/ds15"
        android:background="@drawable/bg_corner_white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/ds10"
        android:paddingTop="@dimen/ds10">

        <TextView
            android:id="@+id/tv_life"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/ds5"
            android:drawableTop="@drawable/icon_life"
            android:gravity="center"
            android:text="生活"
            android:textColor="@color/fontPositive"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_study"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/ds5"
            android:drawableTop="@drawable/icon_study"
            android:gravity="center"
            android:text="学习"
            android:textColor="@color/fontPositive"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_invest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/ds5"
            android:drawableTop="@drawable/icon_invest"
            android:gravity="center"
            android:text="投资"
            android:textColor="@color/fontPositive"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_welfare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/ds5"
            android:drawableTop="@drawable/icon_welfare"
            android:gravity="center"
            android:text="公益"
            android:textColor="@color/fontPositive"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_guarantee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/ds5"
            android:drawableTop="@drawable/icon_guarantee"
            android:gravity="center"
            android:text="保障"
            android:textColor="@color/fontPositive"
            android:textSize="13dp" />
    </LinearLayout>

</RelativeLayout>
