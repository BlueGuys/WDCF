<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/ds2"
    android:background="@color/appBackground"
    android:minHeight="@dimen/ds100"
    android:paddingLeft="@dimen/ds10"
    android:paddingRight="@dimen/ds10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_white"
        android:orientation="vertical"
        android:padding="@dimen/ds20">

        <TextView
            android:id="@+id/tv_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ds80"
            android:minWidth="@dimen/ds120"
            android:textColor="@color/fontPositive"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_order_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/ds10"
            android:layout_toRightOf="@id/tv_order_name"
            android:minWidth="@dimen/ds120"
            android:textColor="@color/fontPositive"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_order_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds60"
            android:layout_toLeftOf="@id/img_edit"
            android:textColor="@color/fontPositive"
            android:textSize="15dp" />

    </RelativeLayout>

</LinearLayout>
