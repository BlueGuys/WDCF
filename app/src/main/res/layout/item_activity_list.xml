<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/ds2"
    android:background="@color/appBackground"
    android:minHeight="@dimen/ds100"
    android:paddingLeft="@dimen/ds10"
    android:paddingRight="@dimen/ds10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corner_white"
        android:orientation="vertical"
        android:padding="@dimen/ds20">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:minWidth="@dimen/ds120"
                android:textColor="@color/fontPositive"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_activity_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds10"
                android:gravity="center_vertical|left"
                android:minWidth="@dimen/ds120"
                android:textColor="@color/fontPositive"
                android:textSize="11dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/img_more"
            android:gravity="center_vertical|right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_activity_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:minWidth="@dimen/ds120"
                android:textColor="@color/fontNegative"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_activity_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds10"
                android:gravity="right|center_vertical"
                android:minWidth="@dimen/ds120"
                android:textColor="@color/fontPositive"
                android:textSize="12dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds10"
            android:src="@drawable/icon_arrow_right" />

    </RelativeLayout>

</LinearLayout>
