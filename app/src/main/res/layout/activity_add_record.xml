<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/ds10">

        <com.hongyan.wdcf.widget.ItemB
            android:id="@+id/item_select_customer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds120"
            android:layout_marginTop="@dimen/ds40"
            app:desc="选择客户"
            app:title="客户" />

        <com.hongyan.wdcf.widget.ItemB
            android:id="@+id/item_chat_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds120"
            android:layout_marginTop="@dimen/ds2"
            app:desc="请选择沟通时间"
            app:title="沟通时间" />

        <com.hongyan.wdcf.widget.ItemB
            android:id="@+id/item_tip_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds120"
            android:layout_marginTop="@dimen/ds2"
            app:desc="请选择提醒时间"
            app:title="提醒时间" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds30"
            android:layout_marginTop="@dimen/ds30"
            android:gravity="center_vertical|left"
            android:text="备注(未受理原因)" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds400"
            android:layout_marginBottom="@dimen/ds30"
            android:layout_marginLeft="@dimen/ds10"
            android:layout_marginRight="@dimen/ds10"
            android:layout_marginTop="@dimen/ds30"
            android:background="@drawable/bg_corner_white"
            android:padding="@dimen/ds20">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:gravity="left|top"
                android:hint="请填写沟通记录(字数限制在200字以内)"
                android:textColor="@color/black"
                android:textColorHint="@color/fontNegative"
                android:textSize="14dp" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_commit"
            style="@style/button_normal"
            android:layout_marginLeft="@dimen/ds100"
            android:layout_marginRight="@dimen/ds100"
            android:layout_marginTop="@dimen/ds60"
            android:text="确认" />

    </LinearLayout>
</ScrollView>