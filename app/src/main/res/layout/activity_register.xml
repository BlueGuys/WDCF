<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eff2f6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_login_header" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/ds30"
        android:layout_marginRight="@dimen/ds30"
        android:background="@drawable/bg_corner_white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/ds40"
        android:paddingLeft="@dimen/ds70"
        android:paddingRight="@dimen/ds70"
        android:paddingTop="@dimen/ds40">

        <EditText
            style="@style/editText_normal"
            android:hint="请输入11为手机号码" />

        <EditText
            style="@style/editText_normal"
            android:layout_marginTop="@dimen/ds20"
            android:hint="请输入密码" />

        <EditText
            style="@style/editText_normal"
            android:layout_marginTop="@dimen/ds20"
            android:hint="请输入手机验证码" />

        <Button
            android:id="@+id/register"
            style="@style/button_normal"
            android:layout_marginTop="@dimen/ds60"
            android:text="立即注册" />
    </LinearLayout>


</RelativeLayout>
