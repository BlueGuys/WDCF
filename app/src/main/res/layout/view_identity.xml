<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/ds28"
        android:background="@color/appColorNegative" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/ds140"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/image_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/icon_circle_yellow"
                    android:enabled="true" />

                <TextView
                    android:id="@+id/tip_01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/ds10"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds10"
                android:enabled="true"
                android:text="注册"
                android:textColor="@color/appColorNegative"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/ds140"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ds60"
            android:layout_marginRight="@dimen/ds60"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/image_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/icon_circle_yellow" />

                <TextView
                    android:id="@+id/tip_02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/ds10"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds10"
                android:enabled="true"
                android:text="身份认证"
                android:textColor="@color/appColorNegative"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/ds140"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/image_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/icon_circle_yellow"
                    android:enabled="true" />

                <TextView
                    android:id="@+id/tip_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/ds10"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textView_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds10"
                android:enabled="true"
                android:text="绑定理财师"
                android:textColor="@color/appColorNegative"
                android:textSize="12dp" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>


