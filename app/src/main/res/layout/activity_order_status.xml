<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:orientation="vertical">

    <com.hongyan.wdcf.widget.ItemB
        android:id="@+id/item_order_status"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds100"
        android:layout_marginTop="@dimen/ds50"
        app:desc="请选择"
        app:title="受理状态" />

    <RelativeLayout
        android:id="@+id/rl_amount"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds100"
        android:background="@drawable/bg_corner_white"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ds30"
            android:text="金额"
            android:textColor="@color/fontPositive" />

        <EditText
            android:id="@+id/et_amount"
            android:layout_width="@dimen/ds200"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/ds30"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ds30"
        android:layout_marginTop="@dimen/ds30"
        android:gravity="center_vertical|left"
        android:text="备注(未受理原因)" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds400"
        android:layout_marginBottom="@dimen/ds30"
        android:layout_marginLeft="@dimen/ds10"
        android:layout_marginRight="@dimen/ds10"
        android:layout_marginTop="@dimen/ds30"
        android:background="@drawable/bg_corner_white"
        android:padding="@dimen/ds20">

        <EditText
            android:id="@+id/et_feedback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:gravity="left|top"
            android:hint="请填写沟通记录(字数限制在200字以内)"
            android:textColor="@color/black"
            android:textColorHint="@color/fontNegative"
            android:textSize="14dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_commit"
        style="@style/button_normal"
        android:layout_marginLeft="@dimen/ds100"
        android:layout_marginRight="@dimen/ds100"
        android:layout_marginTop="@dimen/ds60"
        android:text="确认" />

</LinearLayout>