<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:orientation="vertical"
    android:paddingLeft="@dimen/ds10"
    android:paddingRight="@dimen/ds10">

    <com.hongyan.wdcf.widget.ItemD
        android:id="@+id/item_checkcode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds90"
        android:layout_marginTop="@dimen/ds40"
        app:desc="获取验证码"
        app:hint="请输入原密码"
        app:image="@drawable/icon_password" />

    <TextView
        android:id="@+id/tv_reserve_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/ds40"
        android:layout_marginTop="@dimen/ds10"
        android:paddingLeft="@dimen/ds45"
        android:text="预留手机号186****2701"
        android:textColor="@color/fontPositive" />

    <com.hongyan.wdcf.widget.ItemD
        android:id="@+id/item_newpassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds90"
        android:layout_marginTop="@dimen/ds2"
        app:hint="请输入新密码"
        app:image="@drawable/icon_password" />

    <com.hongyan.wdcf.widget.ItemD
        android:id="@+id/item_newpassword_again"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds90"
        android:layout_marginTop="@dimen/ds2"
        android:orientation="vertical"
        app:hint="请再次输入新密码"
        app:image="@drawable/icon_password" />

    <Button
        android:id="@+id/btn_confirm"
        style="@style/button_normal"
        android:layout_marginLeft="@dimen/ds100"
        android:layout_marginRight="@dimen/ds100"
        android:layout_marginTop="@dimen/ds60"
        android:text="确认" />


</LinearLayout>