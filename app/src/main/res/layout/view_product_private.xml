<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearB"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appBackground"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/ds10"
    android:paddingRight="@dimen/ds10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_vertical|left"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds400" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/ds10">

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/fontGray"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds15"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/appColorPositive"
                    android:paddingBottom="@dimen/ds3"
                    android:paddingLeft="@dimen/ds24"
                    android:paddingRight="@dimen/ds24"
                    android:paddingTop="@dimen/ds3"
                    android:text="募集中..."
                    android:textColor="@color/white"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tv_label2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ds20"
                    android:background="@drawable/bg_stroke_yellow"
                    android:gravity="center"
                    android:paddingBottom="@dimen/ds3"
                    android:paddingLeft="@dimen/ds15"
                    android:paddingRight="@dimen/ds15"
                    android:paddingTop="@dimen/ds3"
                    android:text="活期"
                    android:textColor="@color/fontPositive"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/tv_label3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ds20"
                    android:background="@drawable/bg_stroke_yellow"
                    android:gravity="center"
                    android:paddingBottom="@dimen/ds3"
                    android:paddingLeft="@dimen/ds15"
                    android:paddingRight="@dimen/ds15"
                    android:paddingTop="@dimen/ds3"
                    android:text="可变现"
                    android:textColor="@color/fontPositive"
                    android:textSize="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds15"
                android:gravity="center_vertical|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ds25"
                    android:text="到期日"
                    android:textColor="@color/black"
                    android:textSize="9dp" />

                <TextView
                    android:id="@+id/tv_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ds25"
                    android:text="到期日"
                    android:textColor="@color/black"
                    android:textSize="9dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ds25"
                    android:text="剩余可投（元）"
                    android:textColor="@color/black"
                    android:textSize="9dp" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ds25"
                    android:text="到期日"
                    android:textColor="@color/black"
                    android:textSize="9dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>