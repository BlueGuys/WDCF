<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearB"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appBackground"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/ds10"
    android:paddingRight="@dimen/ds10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:gravity="center_vertical|left"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds300" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="规定一个期限规定一个期限规定一个期限规定一个期限"
                android:textColor="@color/fontGray"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ds15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ds10"
                    android:background="@color/appColorPositive"
                    android:paddingBottom="@dimen/ds3"
                    android:paddingTop="@dimen/ds3"
                    android:text="募集中..."
                    android:textColor="@color/white"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ds20"
                    android:background="@drawable/bg_stroke_yellow"
                    android:paddingBottom="@dimen/ds3"
                    android:paddingLeft="@dimen/ds15"
                    android:paddingRight="@dimen/ds15"
                    android:paddingTop="@dimen/ds3"
                    android:text="活期"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ds20"
                    android:background="@drawable/bg_stroke_yellow"
                    android:paddingBottom="@dimen/ds3"
                    android:paddingLeft="@dimen/ds15"
                    android:paddingRight="@dimen/ds15"
                    android:paddingTop="@dimen/ds3"
                    android:text="可变现"
                    android:textSize="14dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ds15">

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>