<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearB"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ds500"
    android:layout_marginTop="@dimen/ds10"
    android:background="@color/appBackground"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/ds10"
        android:layout_marginRight="@dimen/ds10"
        android:background="@color/white"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/ds15"
            android:background="#88000000"
            android:gravity="center_vertical|left"
            android:orientation="vertical"
            android:paddingBottom="@dimen/ds10"
            android:paddingLeft="@dimen/ds20"
            android:paddingTop="@dimen/ds10">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/ds3"
                android:paddingRight="@dimen/ds24"
                android:paddingTop="@dimen/ds3"
                android:text="募集中..."
                android:textColor="@color/white"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_subTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="活期"
                android:textColor="@color/white"
                android:textSize="10dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>