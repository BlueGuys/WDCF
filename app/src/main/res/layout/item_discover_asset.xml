<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ds10"
        android:background="@drawable/bg_corner_white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/ds20"
        android:paddingLeft="@dimen/ds15"
        android:paddingRight="@dimen/ds15"
        android:paddingTop="@dimen/ds13">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds60"
            android:layout_marginTop="@dimen/ds10"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:id="@+id/stub"
                android:layout_width="@dimen/ds2"
                android:layout_height="@dimen/ds30"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/ds10"
                android:layout_marginRight="@dimen/ds10"
                android:background="@color/fontPositive" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/stub"
                android:gravity="center"
                android:text="热点资讯"
                android:textColor="@color/fontPositive"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ds10"
                android:background="@drawable/icon_arrow_right" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds1"
            android:layout_marginBottom="@dimen/ds10"
            android:layout_marginTop="@dimen/ds10"
            android:background="@color/appLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:paddingBottom="@dimen/ds10"
                android:paddingRight="@dimen/ds10"
                android:paddingTop="@dimen/ds10">

                <TextView
                    android:id="@+id/tv_title_A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/tv_desc_A"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/tv_title_A"
                    android:maxLines="2"
                    android:textColor="@color/fontGray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_timeA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/ds10"
                        android:lines="1"
                        android:textColor="@color/fontGray"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/tv_siteA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:textColor="@color/fontGray"
                        android:textSize="11dp" />
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageViewA"
                android:layout_width="0dp"
                android:layout_height="@dimen/ds180"
                android:layout_weight="3" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ds1"
            android:layout_marginBottom="@dimen/ds10"
            android:layout_marginTop="@dimen/ds10"
            android:background="@color/appLine" />

        <LinearLayout
            android:id="@+id/linearB"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:paddingBottom="@dimen/ds10"
                android:paddingRight="@dimen/ds10"
                android:paddingTop="@dimen/ds10">

                <TextView
                    android:id="@+id/tv_title_B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/tv_desc_B"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/tv_title_B"
                    android:maxLines="2"
                    android:textColor="@color/fontGray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_timeB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/ds10"
                        android:lines="1"
                        android:textColor="@color/fontGray"
                        android:textSize="11dp" />

                    <TextView
                        android:id="@+id/tv_siteB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:textColor="@color/fontGray"
                        android:textSize="11dp" />
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageViewB"
                android:layout_width="0dp"
                android:layout_height="@dimen/ds180"
                android:layout_weight="3" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
