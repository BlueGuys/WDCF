<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds400"
        android:layout_marginBottom="@dimen/ds30"
        android:layout_marginLeft="@dimen/ds10"
        android:layout_marginRight="@dimen/ds10"
        android:layout_marginTop="@dimen/ds30"
        android:background="@drawable/bg_corner_white"
        android:padding="@dimen/ds20">

        <EditText
            android:id="@+id/et_feedback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="left|top"
            android:hint="为保证我们能准确理解您的反馈，请输入15字以上的内容！"
            android:textColor="@color/black"
            android:textColorHint="@color/fontNegative"
            android:textSize="14dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds80"
        android:layout_marginLeft="@dimen/ds10"
        android:layout_marginRight="@dimen/ds10"
        android:layout_marginTop="@dimen/ds10"
        android:background="@drawable/bg_corner_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/ds20"
        android:paddingRight="@dimen/ds20">

        <TextView
            android:layout_width="@dimen/ds140"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:minWidth="@dimen/ds140"
            android:text="您的邮箱"
            android:textColor="@color/fontPositive" />

        <EditText
            android:id="@+id/et_email"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical|right"
            android:hint="选填,以使我们为您服务"
            android:textColor="@color/black"
            android:textColorHint="@color/fontNegative"
            android:textSize="14dp" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_commit"
        style="@style/button_normal"
        android:layout_marginLeft="@dimen/ds100"
        android:layout_marginRight="@dimen/ds100"
        android:layout_marginTop="@dimen/ds60"
        android:text="提交" />

</LinearLayout>