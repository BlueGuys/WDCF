<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appBackground"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/ds30"
        android:paddingTop="@dimen/ds20">

        <EditText
            android:id="@+id/et_search"
            style="@style/editText_normal"
            android:layout_width="0dp"
            android:layout_height="@dimen/ds70"
            android:layout_marginRight="@dimen/ds30"
            android:layout_weight="1"
            android:background="@color/appBackground"
            android:drawableLeft="@drawable/icon_search"
            android:drawablePadding="@dimen/ds10"
            android:hint="请输入客户信息"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:lines="1"
            android:paddingLeft="@dimen/ds14"
            android:textSize="13dp" />

        <TextView
            android:layout_width="@dimen/ds140"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingRight="@dimen/ds30"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:visibility="gone" />
    </LinearLayout>

    <com.hongyan.wdcf.widget.CommonIndicator
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
