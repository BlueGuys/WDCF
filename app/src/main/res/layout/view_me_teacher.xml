<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="@color/appBackground"
    android:gravity="center_horizontal|top"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds350"
        android:layout_marginBottom="@dimen/ds20"
        android:background="@color/appColorPositive">

        <TextView
            android:id="@+id/tv_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_member"
            android:gravity="center"
            android:paddingBottom="@dimen/ds5"
            android:paddingLeft="@dimen/ds20"
            android:paddingRight="@dimen/ds20"
            android:paddingTop="@dimen/ds5"
            android:text="个人信息设置"
            android:textColor="@color/white"
            android:textSize="13dp" />

        <LinearLayout
            android:id="@+id/ll_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/ds30">

            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="@dimen/ds120"
                android:layout_height="@dimen/ds120"
                android:layout_marginBottom="@dimen/ds20"
                android:src="@drawable/icon_user_photo" />

            <TextView
                android:id="@+id/tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds8"
                android:text="王先生"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_userPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ds8"
                android:text="186004217aa"
                android:textColor="@color/white"
                android:textSize="13dp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/ds20"
        android:paddingRight="@dimen/ds20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_01"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_corner_yellow"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/ds30"
                android:paddingTop="@dimen/ds30">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_teacher_01" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ds40"
                    android:layout_marginTop="@dimen/ds40"
                    android:text="客户信息" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ds20"
                    android:src="@drawable/icon_teacher_more" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_02"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds30"
                android:layout_weight="1"
                android:background="@drawable/bg_corner_yellow"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/ds30"
                android:paddingTop="@dimen/ds30">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_teacher_02" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ds40"
                    android:layout_marginTop="@dimen/ds40"
                    android:text="预约处理" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ds20"
                    android:src="@drawable/icon_teacher_more" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ds20"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_03"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_corner_yellow"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/ds30"
                android:paddingTop="@dimen/ds30">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_teacher_03" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ds40"
                    android:layout_marginTop="@dimen/ds40"
                    android:text="分享获客" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ds20"
                    android:src="@drawable/icon_teacher_more" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_04"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ds30"
                android:layout_weight="1"
                android:background="@drawable/bg_corner_yellow"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/ds30"
                android:paddingTop="@dimen/ds30">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_teacher_04" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ds40"
                    android:layout_marginTop="@dimen/ds40"
                    android:text="增加沟通记录" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ds20"
                    android:src="@drawable/icon_teacher_more" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>


