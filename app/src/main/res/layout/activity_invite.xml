<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ds10"
        android:layout_marginRight="@dimen/ds10"
        android:layout_marginTop="@dimen/ds30"
        android:background="@drawable/bg_corner_white"
        android:padding="@dimen/ds20">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="@dimen/ds120"
            android:layout_height="@dimen/ds120"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:id="@+id/image_call"
            android:layout_width="@dimen/ds120"
            android:layout_height="@dimen/ds120"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_call" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/image_call"
            android:layout_toRightOf="@id/image_logo"
            android:paddingLeft="@dimen/ds30">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/ds40"
                android:textColor="@color/fontPositive"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_user_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_user_name"
                android:textColor="@color/fontPositive"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_user_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tv_user_name"
                android:layout_marginTop="@dimen/ds10"
                android:textColor="@color/fontPositive"
                android:textSize="15dp" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/btn_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds120"
        android:background="@color/appColorPositive"
        android:gravity="center"
        android:text="分享"
        android:textColor="@color/white"
        android:textSize="16dp" />

</LinearLayout>