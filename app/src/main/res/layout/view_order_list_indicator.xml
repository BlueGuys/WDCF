<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/appBackground"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/ds80"
    android:paddingRight="@dimen/ds80">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ds80"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="预约"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="活动"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView_03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="交易"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <View
                android:id="@+id/view_01"
                android:layout_width="@dimen/ds40"
                android:layout_height="@dimen/ds5"
                android:background="@color/fontPositive" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <View
                android:id="@+id/view_02"
                android:layout_width="@dimen/ds40"
                android:layout_height="@dimen/ds5"
                android:background="@color/fontPositive" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <View
                android:id="@+id/view_03"
                android:layout_width="@dimen/ds40"
                android:layout_height="@dimen/ds5"
                android:background="@color/fontPositive" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>

