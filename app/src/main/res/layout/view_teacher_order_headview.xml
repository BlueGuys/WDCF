<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ds100"
    android:background="@color/appColorPositive">

    <ImageView
        android:id="@+id/image_back"
        android:layout_width="@dimen/ds44"
        android:layout_height="@dimen/ds44"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/ds20"
        android:src="@drawable/icon_arrow_back" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/ds50"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_01"
            android:layout_width="@dimen/ds250"
            android:layout_height="match_parent"
            android:background="@drawable/bg_left_white_stroke"
            android:gravity="center"
            android:text="产品订单"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView_02"
            android:layout_width="@dimen/ds250"
            android:layout_height="match_parent"
            android:background="@drawable/bg_right_white_stroke"
            android:gravity="center"
            android:text="活动预约"
            android:textSize="14dp" />
    </LinearLayout>

</RelativeLayout>

